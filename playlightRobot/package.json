{
  "name": "playlight-robot",
  "version": "1.0.0",
  "description": "Playwright recorder and automated testing",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:example": "playwright test tests/example.spec.ts --headed",
    "start": "ts-node parallel-run.ts",
    "login": "ts-node scripts/save-auth.ts",
    "auth:show": "node -e \"const fs=require('fs'); if(fs.existsSync('auth/auth.json')){const auth=JSON.parse(fs.readFileSync('auth/auth.json','utf-8')); console.log('保存的 Cookies:', auth.cookies?.length || 0, '个'); console.log('LocalStorage:', auth.origins?.reduce((s,o)=>s+(o.localStorage?.length||0),0) || 0, '项');} else {console.log('未找到认证文件')}\"",
    "auth:clear": "node -e \"require('fs').rmSync('auth/auth.json', {force: true})\" && echo 已清除认证状态",
    "codegen": "playwright codegen --load-storage=auth/auth.json https://aippt.wps.cn/aippt/",
    "record": "playwright codegen --load-storage=auth/auth.json -o tests/recorded.spec.ts --target typescript https://aippt.wps.cn/aippt/",
    "record:custom": "playwright codegen --load-storage=auth/auth.json -o",
    "report": "playwright show-report",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "recording"
  ],
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}

